<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="110px"
			android:layout_height="wrap_content" 
			android:text="@string/settings_sound_url" />
		<EditText android:id="@+id/settings_sound_url" 
		  android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"/>
	</LinearLayout>	
	
	<Button android:id="@+id/settings_confirm" 
	  	android:text="@string/settings_confirm"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="50px" />
	
	<TextView
        android:id="@+id/settings_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>